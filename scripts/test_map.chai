print("Combine .comap Test");
if (loadMap("test.comap")) {} else {
    error("Failed to load map!");
}

global scene = getScene();
global cam = getCamera();
global moveSpeed = 5.0;
global targetCamX = 0.0;
global targetCamY = 0.0;
onUpdate(fun(deltaTime) {
    var forward = cam.forward();
    var right = cam.right();
    if (isKeyDown(KEY_W)) {
        cam.position.x = cam.position.x + forward.x * moveSpeed * deltaTime;
        cam.position.y = cam.position.y + forward.y * moveSpeed * deltaTime;
        cam.position.z = cam.position.z + forward.z * moveSpeed * deltaTime;
    }
    if (isKeyDown(KEY_S)) {
        cam.position.x = cam.position.x - forward.x * moveSpeed * deltaTime;
        cam.position.y = cam.position.y - forward.y * moveSpeed * deltaTime;
        cam.position.z = cam.position.z - forward.z * moveSpeed * deltaTime;
    }
    if (isKeyDown(KEY_A)) {
        cam.position.x = cam.position.x - right.x * moveSpeed * deltaTime;
        cam.position.z = cam.position.z - right.z * moveSpeed * deltaTime;
    }
    if (isKeyDown(KEY_D)) {
        cam.position.x = cam.position.x + right.x * moveSpeed * deltaTime;
        cam.position.z = cam.position.z + right.z * moveSpeed * deltaTime;
    }
    if (isKeyDown(KEY_SPACE)) {
        cam.position.y = cam.position.y + moveSpeed * deltaTime;
    }
    if (isKeyDown(KEY_LSHIFT)) {
        cam.position.y = cam.position.y - moveSpeed * deltaTime;
    }

    if (isKeyDown(KEY_LEFT)) {
        targetCamY = targetCamY - 90.0 * deltaTime;
    }
    if (isKeyDown(KEY_RIGHT)) {
        targetCamY = targetCamY + 90.0 * deltaTime;
    }
    if (isKeyDown(KEY_UP)) {
        targetCamX = targetCamX - 60.0 * deltaTime;
    }
    if (isKeyDown(KEY_DOWN)) {
        targetCamX = targetCamX + 60.0 * deltaTime;
    }

    cam.rotation.x = targetCamX;
    cam.rotation.y = targetCamY;
});

print("Script initialized!");
